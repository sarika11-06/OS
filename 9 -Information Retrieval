# Information Retrieval System in Python

from sklearn.feature_extraction.text import TfidfVectorizer
from sklearn.metrics.pairwise import cosine_similarity

# Step 1: Corpus (documents)
documents = [
    "Data science is the future of technology.",
    "Machine learning and data analysis are part of data science.",
    "Python is widely used for machine learning.",
    "Artificial Intelligence and deep learning are growing fields."
]

# Step 2: Create TF-IDF matrix
vectorizer = TfidfVectorizer(stop_words='english')
tfidf_matrix = vectorizer.fit_transform(documents)

# Step 3: User Query
query = "machine learning with python"

# Step 4: Transform query to TF-IDF
query_vec = vectorizer.transform([query])

# Step 5: Compute Cosine Similarity
cosine_sim = cosine_similarity(query_vec, tfidf_matrix).flatten()

# Step 6: Rank documents by similarity
ranked_doc_indices = cosine_sim.argsort()[::-1]

print("Query:", query)
print("\nTop relevant documents:\n")

for idx in ranked_doc_indices:
    print(f"Document {idx+1} (Score: {cosine_sim[idx]:.4f}):")
    print(f"  {documents[idx]}\n")

import spacy

nlp = spacy.load("en_core_web_sm")

corpus = """
Barack Obama visited India in 2015 and met Prime Minister Narendra Modi in New Delhi. He also delivered a speech at Siri Fort Auditorium and discussed relations between the United States and India. Later, he traveled to Mombai to attend an event organized by the Tata Group. The meeting highlighted Indo-US strategic partnerships in defense, trade, and technology.
"""

if len(corpus.split()) > 70:
  print("Corpus exceeds 70 words. Truncating to first 70 words.")
  corpus = ' '.join(corpus.split()[:70])
  
doc = nlp(corpus)
#Extract and display Named Entities
if doc.ents:
  print("\nNamed Entities found:")
  for ent in doc.ents:
    print(f"{ent.text} -> {ent.label_}")
else:
  print("\nNo named entities found in the corpus.")
